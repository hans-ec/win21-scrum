@model Product

<div class="col">
    <div class="card">
        <img src="@Model.ImageUrl" alt="@Model.Name">
        <div onclick="goToProduct(event)" class="card-content">
            <div class="card-menu">
                <div class="items">
                    @if(Model.InStock)
                    {
                        <i data-bs-toggle="tooltip" data-bs-placement="left" title="In stock" class="instock"></i>
                    }
                    else
                    {
                        <i data-bs-toggle="tooltip" data-bs-placement="left" title="Out of stock" class="outofstock"></i>
                    }

                    <div class="link-item" onclick="addToWishList(event)" data-product="@Model.Id" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to Wishlist"><i class="fa-regular fa-heart"></i></div>
                    <div class="link-item" onclick="addToCompare(event)" data-product="@Model.Id" data-bs-toggle="tooltip" data-bs-placement="left" title="Compare"><i class="fa-regular fa-shuffle"></i></div>
                    <div class="link-item" onclick="addToCart(event)" data-product="@Model.Id" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to Cart"><i class="fa-regular fa-cart-shopping" ></i></div>
                </div>
            </div>
            <div class="card-body">
                <div class="card-title">@Model.Name</div>
            </div>
        </div>
        <div class="card-background"></div>
    </div>       
</div>
